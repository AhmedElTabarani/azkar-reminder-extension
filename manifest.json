{
  "name": "مذكر الأذكار",
  "description": "إضافة للمتصفح تتذكرك بالأذكار والأدعية بشكل مستمر وبها اذكار الصباح والمساء",
  "version": "0.1",
  "manifest_version": 3,
  "action": {
    "default_popup": "/index.html",
    "default_icon": {
      "16": "/icons/icon16.png",
      "48": "/icons/icon48.png",
      "64": "/icons/icon64.png",
      "128": "/icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "permissions": ["storage", "alarms", "notifications"]
}
